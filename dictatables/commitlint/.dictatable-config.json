{
  "message": "Setup some git stuff.",
  "actions": [
    {
      "copyFrom": "pre-commit-hook.txt",
      "target": ".git/hooks/pre-commit",
      "chmod": "0755"
    },
    {
      "copyFrom": "gitmessage.txt",
      "target": ".gitmessage"
    },
    {
      "target": ".gitignore",
      "haveLineContaining": [".gitmessage"]
    }
  ]
}
