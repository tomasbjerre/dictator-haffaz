{
  "message": "Some, optional, custom message informing users about these requirements.",
  "copy": [
    {
      "from": "pre-commit-hook.txt",
      "to": ".git/hooks/pre-commit"
    },
    {
      "from": "gitmessage.txt",
      "to": ".gitmessage"
    }
  ],
  "requirements": [
    {
      "target": "package.json",
      "message": "Some, optional, custom message informing users about these requirements.",
      "notHaveJsonPathNodes": {
        "message": "Some, optional, custom message.",
        "values": [
          {
            "message": "Some, optional,  custom message.",
            "expression": "$.devDependencies['husky']"
          }
        ]
      }
    },
    {
      "target": ".gitignore",
      "message": "Some, optional, custom message informing users about these requirements.",
      "haveLineContaining": {
        "message": "Some, optional, custom message.",
        "values": [".gitmessage"]
      }
    }
  ]
}
